<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Relayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_email_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/edittext_email_lin"
            android:layout_below="@id/textview_email_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/background_textfields"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/textview_password_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittext_email_lin"
            android:text="@string/password"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edittext_password_lin"
            android:layout_below="@id/textview_password_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_textfields"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/signin_button_lin"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edittext_password_lin"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:background="@drawable/background_buttons"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/signup_button_lin"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="@string/signup"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>